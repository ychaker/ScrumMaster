.search-form
	- form_tag :action => :index do
		= text_field_tag :q, params[:q], :size => 32
		= select_tag :model, options_for_select(%w{All} + @klasses, params[:model])
		= submit_tag 'Search'
.clear-form
	- form_tag :action => :index do
		= hidden_field_tag :q, nil
		= submit_tag 'Clear'
.results
	/
		= @search.inspect
	-# TODO: Figure out a way to display a more meaningful results set
	- @search.each_hit_with_result do |hit, item|
		.result
			- if item.class == User
				%h2= h "#{item.class }: #{item.name}" 
			- elsif item.class == Cell
				%h2= h "#{item.class}: #{item.day}"
			- else
				%h2= h "#{item.class}: #{item.title}"
			- unless hit.score.blank?
				%h6== (#{h hit.score})
			/ 
				= item.inspect
.pagination
	= will_paginate(@search.results)